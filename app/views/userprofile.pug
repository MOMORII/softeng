extends layout2

block content
  div.container
    if user
      ul 
    
        h1 #{user.username}'s PROFILE 
    
        img(class='image', src='https://i.pinimg.com/originals/f3/8d/37/f38d37a0efcea05e5a19b7080c394538.jpg' alt='Profile Picture' style='width:200px;height:200px;')
    
        
    
        br
  
  
  
        div.profile-info
    
          br
    
          strong Username: 
    
          |  #{user.username}
    
          br
    
          strong Title:
    
          |  #{user.progress}
    
          br
    
          strong Member since: 
    
          |  #{user.date_joined}
    
        
    
        div.badges
    
          h2 ACHIEVEMENTS
    
          if badges.length
    
            ul
    
              each badge in badges
    
                li
    
                  strong #{badge.badgeName}
    
                  |  - #{badge.badgeDescription}
    
          else
    
            p No badges earned yet.
  
  
  
      ul
    
        img(class='image', src='https://i.pinimg.com/736x/54/55/a1/5455a10a0dd311e129e8bb046eafc768.jpg' alt='Profile Banner' style='width:700px;height:150px')
    
    
    
        div.contributions
    
          br
    
          h2 MY CONTRIBUTIONS
    
          if tips.length
    
            ul
    
              each tip in tips
    
                li
    
                  h2
    
                    a(href=`/forum/${tip.tipID}`) #{tip.title} 
    
                  p #{tip.createdAt}
    
          else
    
            p No contributions yet.
    else
        p You are not logged in. Please log in or sign up.
        a(href='/login') Login
        a(href='/signup') Sign Up