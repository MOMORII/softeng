extends layout

block content
  h1 Welcome to Game Tips & Tricks
  p Explore various tips (and tricks) for all kinds of your favourite games!

  each tip in tips
    .tip
      h2= tip.tipTitle
      p Posted by #{tip.username} on #{tip.createdAt}
      h3 Game: #{tip.gameTitle}
      p #{tip.content}
      if tip.categories && tip.categories !== 'None'
        p Categories: #{tip.categories}
  else
    p No tips available yet.